---
import SolarSystem from "../components/effect/SolarSystem.astro";
const { title = "Página con Animación de Estrellas" } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg" href="/My-Logo3.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Alfa+Slab+One&family=Anton&family=Boldonse&family=Doto:wght@100..900&family=Lilita+One&family=Oswald:wght@200..700&family=Permanent+Marker&family=Pixelify+Sans:wght@400..700&family=Press+Start+2P&family=Sixtyfour+Convergence&family=Teko:wght@300..700&display=swap"
      rel="stylesheet"
    />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style lang="scss"></style>
  </head>
  <style>
    body {
      margin: 0;
      padding: 0;
      color: #fff;
      background-color: rgb(12, 32, 1);
      font-family: Arial, sans-serif;
      position: relative;
      min-height: 100vh;
      background: linear-gradient(
        45deg,
        rgba(0, 0, 0, 0.7) 0%,
        rgba(100, 0, 100, 0.3) 100%
      );
    }

    /* Capas de fondo */
    .background {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background-size: cover;
      background-position: center;
      transition:
        opacity 2s ease-in-out,
        filter 2s ease-in-out;
      filter: blur(8px);
      opacity: 0;
      z-index: -2;
    }

    .background.active {
      opacity: 1;
      filter: blur(0);
    }

    /* Degradado overlay */
    .gradient-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(
        45deg,
        rgba(0, 0, 0, 0.7) 0%,
        rgba(100, 0, 100, 0.3) 100%
      );
      z-index: -1;
    }
  </style>

  <body>
    <SolarSystem />

    <!-- Contenido principal -->
    <slot />
  </body>
</html>
