---
import Layout from "../layouts/Layout2.astro";

export async function getStaticPaths() {
  return [
    { params: { lang: "es" } },
    { params: { lang: "en" } },
    { path: "/favicon.ico", _route: false },
  ];
}
---

<Layout title="404">
  <h1 class="error-code">404</h1>

  <div class="cloak-wrapper">
    <div class="cloak-container">
      <div class="cloak-effect"></div>
    </div>
  </div>

  <div class="error-info">
    <p class="error-message">
      We're fairly sure that page used to be here, but seems to have gone
      missing. We do apologise on its behalf.
    </p>
    <a
      href="/"
      class="home-link"
      role="button"
      aria-label="Return to home page"
    >
      Home page
    </a>
  </div>
</Layout>

<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Sixtyfour&display=swap");

  :root {
    --shadow: rgba(0, 0, 0, 0.9);
    --bg: #0a0a0a;
    --lit-header: #878a87;
    --speed: 2s;
    --transition: all 0.3s ease;
    --glow-color: rgba(7, 112, 3, 0.7);
  }

  body {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    min-height: 100vh;
    gap: 1.5rem;
    background: var(--bg);
    margin: 0;
    position: relative;
    overflow: hidden;
  }

  .error-code {
    font-family: "Sixtyfour", cursive !important;
    font-optical-sizing: auto;
    font-weight: 400;
    font-style: normal;
    font-variation-settings:
      "BLED" 60,
      "SCAN" 25,
      "XELA" 8,
      "YELA" 8;
    animation:
      swing var(--speed) ease-in-out infinite,
      glitch 2s infinite alternate;
    font-size: clamp(5rem, 40vmin, 20rem);
    margin: 0;
    letter-spacing: 1rem;
    color: var(--lit-header);
    text-shadow:
      0 0 10px var(--glow-color),
      0 0 20px var(--glow-color),
      2px 2px 4px var(--shadow);
    position: relative;
    z-index: 2;
    text-transform: uppercase;
  }

  .cloak-effect {
    position: fixed;
    inset: 0;
    background: radial-gradient(
      circle at center,
      transparent 30%,
      rgba(0, 0, 0, 0.95)
    );
    animation:
      cloak-anim var(--speed) ease-in-out infinite,
      static-flicker 0.5s infinite alternate;
    pointer-events: none;
    z-index: 1;
    mix-blend-mode: multiply;
  }

  .error-info {
    color: rgba(255, 255, 255, 0.85);
    text-align: center;
    max-width: 44ch;
    padding: 0 1rem;
    position: relative;
    z-index: 2;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .home-link {
    border: 1px solid var(--glow-color);
    padding: 0.75rem 2.5rem;
    border-radius: 6px;
    text-decoration: none;
    color: var(--lit-header);
    margin-top: 1.5rem;
    display: inline-block;
    transition: var(--transition);
    background: rgba(0, 0, 0, 0.3);
    cursor: pointer;
    position: relative;
    z-index: 3;
    font-weight: bold;
    text-shadow: 0 0 5px var(--glow-color);
  }

  .home-link:hover,
  .home-link:focus {
    background: rgba(0, 255, 255, 0.1);
    transform: translateY(-3px);
    box-shadow:
      0 0 20px var(--glow-color),
      inset 0 0 10px var(--glow-color);
    outline: none;
  }

  @keyframes swing {
    0%,
    100% {
      transform: translateX(-12px);
    }
    50% {
      transform: translateX(12px);
    }
  }

  @keyframes cloak-anim {
    0%,
    100% {
      opacity: 0.8;
      transform: scale(1);
    }
    50% {
      opacity: 0.9;
      transform: scale(1.03);
    }
  }

  @keyframes glitch {
    0% {
      text-shadow: 0 0 10px var(--glow-color);
    }
    20% {
      transform: skewX(5deg);
    }
    40% {
      transform: skewX(-5deg);
    }
    60% {
      text-shadow: 5px 5px 0 var(--glow-color);
    }
    80% {
      transform: skewY(3deg);
    }
    100% {
      text-shadow: -5px -5px 0 var(--glow-color);
    }
  }

  @keyframes static-flicker {
    0% {
      opacity: 0.8;
    }
    100% {
      opacity: 0.95;
    }
  }

  @media (max-width: 768px) {
    .error-code {
      font-size: 15vw;
      letter-spacing: 0.5rem;
      font-variation-settings:
        "BLED" 40,
        "SCAN" 15;
    }

    .error-message {
      font-size: 1rem;
    }

    .home-link {
      padding: 0.6rem 1.8rem;
    }
  }

  @media (max-width: 480px) {
    .error-code {
      font-size: 18vw;
      font-variation-settings:
        "BLED" 30,
        "SCAN" 10;
    }
  }
</style>
