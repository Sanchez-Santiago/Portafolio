---
import santiagoImg from "../../assets/Santiago-Sanchez.jpeg";
import TextScramel from "../effect/TextScramel.astro";
const { t } = Astro.props;
---

<div id="container">
  <div id="conte-img-h1" class="cont">
    <div id="imagen-container">
      <img id="imagen" src={santiagoImg.src} alt="Logo" />
    </div>
    <h1 id="name" class="glitch" data-text="GLITCH">
      {t?.header?.name || "Nombre por defecto"}
    </h1>
  </div>
  <div class="cont">
    <TextScramel t={t.phrases} timeSpeed={3000} />
    <h2 id="about" id="sobre-mi">{t?.about?.title || "Sobre Mí"}:</h2>
    <p id="parrafo">
      {t?.about?.text || "Texto de presentación por defecto"}
    </p>
  </div>

  <style>
    /* Contenedor principal simplificado */
    #container {
      display: flex;
      flex-direction: column;
      gap: 1.5rem; /* Espacio consistente entre secciones */
      padding: 0;
      color: #fff;
      font-family: Arial, sans-serif;
      max-width: 800px;
      margin: 0 auto;
    }

    /* Sección superior optimizada */
    #conte-img-h1 {
      display: flex;
      align-items: center;
      gap: 1.5rem;
      padding: 0 1rem;
    }

    #imagen-container {
      width: 120px;
      height: 120px;
      border-radius: 50%;
      overflow: hidden;
      border: 2px solid white;
      flex-shrink: 0;
    }

    #name {
      font-family: "Doto", sans-serif;
      font-size: 2.5rem;
      font-weight: 700;
      margin: 0;
      line-height: 1;
    }

    /* Sección de contenido */
    .cont {
      font-family: "Roboto Mono", monospace;
      font-weight: 100;
      font-size: 2rem;
      color: #fafafa;
      gap: 1rem;
      padding: 1rem;
      margin: 0;
    }

    #about {
      font-family: "Teko", sans-serif;
      font-size: 3rem;
      margin: 0 0 0.5rem 0;
    }

    #parrafo {
      font-size: 1.5rem;
      font-weight: 200;
      margin: 0;
      line-height: 1.5;
    }

    @media (max-width: 600px) {
      #conte-img-h1 {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
      }

      #imagen-container {
        width: 100px;
        height: 100px;
      }

      #name {
        font-size: 2rem;
      }
    }
  </style>
</div>
