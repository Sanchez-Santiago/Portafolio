---
import santiagoImg from "../../assets/Santiago-Sanchez.jpeg";
const { t } = Astro.props;
---

<div id="container">
  <div id="conte-img-h1" class="cont">
    <div id="imagen-container">
      <img id="imagen" src={santiagoImg.src} alt="Logo" />
    </div>
    <h1 id="name" class="glitch" data-text="GLITCH">
      {t?.header?.name || "Nombre por defecto"}
    </h1>
  </div>
  <div id="about" class="cont">
    <h2 id="sobre-mi">{t?.about?.title || "Sobre Mí"}:</h2>
    <p id="parrafo">
      {t?.about?.text || "Texto de presentación por defecto"}
    </p>
  </div>
</div>

<style>
  /* Contenedor general: usamos grid para organizar secciones */
  #container {
    display: grid;
    grid-template-rows: auto auto;
    gap: 1rem;
    padding: 1rem;
    color: #fff;
    font-family: Arial, sans-serif;
    width: 100%;
  }

  /* Sección superior: imagen y h1 juntos en una sola fila, alineados a la izquierda */
  #conte-img-h1 {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  #imagen-container {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden;
    border: 3px solid white;
    flex-shrink: 0;
  }

  #imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  #name {
    font-family: "Doto", sans-serif;
    font-size: 3rem;
    font-weight: 700;
    margin: 0.5rem 0;
    margin-left: auto;
  }

  @keyframes rot {
    to {
      rotate: 360deg;
    }
  }

  /* Sección 'Sobre Mí' en la segunda fila */
  #about {
    font-family: "Pixelify Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400; /* Ajusta el valor de font-weight */
    font-style: normal;
    font-size: 3rem;
    grid-column: 1 / -1;
    margin: 0;
  }
  #parrafo {
    font-size: 2rem;
    margin: 0;
    font-family: "Pixelify Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: 400; /* Ajusta el valor de font-weight */
    font-style: normal;
  }

  /* Media queries para dispositivos móviles */
  @media (max-width: 600px) {
    #container {
      padding: 0.5rem;
    }
    #imagen-container {
      width: 100px;
      height: 100px;
    }
    #name {
      font-size: 2rem;
    }
    #about {
      font-size: 2rem;
    }
    #parrafo {
      font-size: 1.5rem;
    }
  }
</style>
