---
import santiagoImg from "../../assets/Santiago-Sanchez.jpeg";
const { t } = Astro.props;
---

<div id="container">
  <div id="conte-img-h1" class="cont">
    <div id="imagen-container">
      <img id="imagen" src={santiagoImg.src} alt="Logo" />
    </div>
    <h1 id="name">{t?.header?.name || "Nombre por defecto"}</h1>
  </div>
  <div id="about" class="cont">
    <h2 id="sobre-mi">{t?.about?.title || "Sobre Mí"}:</h2>
    <p id="parrafo">{t?.about?.text || "Texto de presentación por defecto"}</p>
  </div>
</div>

<style>
  /* Contenedor general: usamos grid para organizar secciones */
  #container {
    display: grid;
    grid-template-rows: auto auto; /* Primera fila para imagen y nombre, segunda para 'Sobre Mí' */
    gap: 1rem;
    padding: 1rem;
    color: #fff;
    font-family: Arial, sans-serif;
    width: 100%;
  }

  /* Sección superior: imagen y h1 juntos en una sola fila, alineados a la izquierda */
  #conte-img-h1 {
    top: auto;
    display: flex;
    align-items: center;
    gap: 1rem;
    grid-row: 0;
    grid-column: 1 / -1;
  }

  #imagen-container {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    overflow: hidden; /* Oculta cualquier parte que sobresalga del círculo */
    border: 3px solid white;
    flex-shrink: 0; /* Evita que se reduzca su tamaño si el contenedor se estrecha */
  }

  #imagen {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Nombre: alineado a la izquierda junto a la imagen */
  #name {
    font-family: "Doto", sans-serif;
    font-size: 3rem;
    /* Puedes ajustar estos valores según tus necesidades */
    font-weight: 700;
    margin: 0.5rem 0;
    margin-left: auto;
  }

  /* Sección 'Sobre Mí' en la segunda fila */
  #about {
    font-family: "Pixelify Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
    font-size: 3rem;
    grid-column: 1 / -1;
    margin: 0;
  }
  #parrafo {
    font-size: 2rem;
    margin: 0;
    font-family: "Pixelify Sans", sans-serif;
    font-optical-sizing: auto;
    font-weight: <weight>;
    font-style: normal;
  }
</style>
