---
// Recibir datos a través de props
const { title, content, image, link, technology } = Astro.props;
---

<div class="nft">
  <a href={link}>
    <div class="main">
      <img class="tokenImage" src={image} alt="NFT" loading="lazy" />
      <h2>{title}</h2>
      <div class="description-container">
        <p class="description">{content}</p>
      </div>
      <hr />
      <p>{technology}</p>
    </div>
  </a>
</div>
<style lang="scss">
  body {
    margin: 0;
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", "Roboto",
      "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans",
      "Helvetica Neue", sans-serif;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    background-color: rgb(22, 20, 24);
    color: #eee;
    user-select: none;
  }
  code {
    font-family: source-code-pro, Menlo, Monaco, Consolas, "Courier New",
      monospace;
  }
  .tokenImage {
  }
  .nft {
    user-select: none;
    max-width: 300px;
    margin: 1rem auto;
    border: 1px solid #ffffff22;
    background-color: #282c34;
    background: linear-gradient(
      0deg,
      rgba(40, 44, 52, 1) 0%,
      rgba(17, 0, 32, 0.5) 100%
    );
    box-shadow: 0 7px 20px 5px #00000088;
    border-radius: 0.7rem;
    backdrop-filter: blur(7px);
    -webkit-backdrop-filter: blur(7px);
    overflow: hidden;
    transition: 0.5s all;
    &::before {
      position: fixed;
      content: "";
      box-shadow: 0 0 100px 40px #ffffff08;
      top: -10%;
      left: -100%;
      transform: rotate(-45deg);
      height: 60rem;
      transition: 0.7s all;
    }
    &:hover {
      border: 1px solid #ffffff44;
      box-shadow: 0 7px 50px 10px #000000aa;
      transform: scale(1.015);
      filter: brightness(1.3);

      .description-container {
        max-height: 1000px; /* Un valor muy alto para mostrar todo el contenido */
        overflow: visible; /* Eliminar cualquier scrollbar */
      }
      &::before {
        filter: brightness(0.5);
        top: -100%;
        left: 200%;
      }
    }
    .main {
      display: flex;
      flex-direction: column;
      width: 90%;
      padding: 1rem;
      margin: 0 auto; // Centra el contenido horizontalmente
      .tokenImage {
        display: block;
        margin: 0 auto; // Centra la imagen horizontalmente
        border-radius: 0.5rem;
        max-width: 100%;
        height: 250px;
        object-fit: cover;
      }
      .description-container {
        max-height: 60px; /* Altura para ~3 líneas */
        overflow: hidden;
        position: relative;
        transition: max-height 0.5s ease;
      }

      /* Puntos suspensivos al final (solo cuando está truncado) */
      .description-container:not(:hover)::after {
        content: "...";
        position: absolute;
        bottom: 0;
        right: 0;
        padding-left: 8px; /* Espacio para el fondo del degradado */
        background: linear-gradient(90deg, transparent, #282c34 20%);
      }

      /* Al hacer hover */
      .description-container:hover {
        max-height: 500px; /* Altura suficiente para mostrar todo */
      }

      .description {
        margin: 0.5rem 0;
        color: #a89ec9;
        text-align: left; /* Alinea el texto a la izquierda */
      }
      .tokenInfo {
        display: flex;
        justify-content: space-between;
        align-items: center;
        .price {
          display: flex;
          align-items: center;
          color: #ee83e5;
          font-weight: 700;
          ins {
            margin-left: -0.3rem;
            margin-right: 0.5rem;
          }
        }
        .duration {
          display: flex;
          align-items: center;
          color: #a89ec9;
          margin-right: 0.2rem;
          ins {
            margin: 0.5rem;
            margin-bottom: 0.4rem;
          }
        }
      }
      .creator {
        display: flex;
        align-items: center;
        margin-top: 0.2rem;
        margin-bottom: -0.3rem;
        ins {
          color: #a89ec9;
          text-decoration: none;
        }
        .wrapper {
          display: flex;
          align-items: center;
          border: 1px solid #ffffff22;
          padding: 0.3rem;
          margin: 0;
          margin-right: 0.5rem;
          border-radius: 100%;
          box-shadow: inset 0 0 0 4px #000000aa;
          img {
            border-radius: 100%;
            border: 1px solid #ffffff22;
            width: 2rem;
            height: 2rem;
            object-fit: cover;
            margin: 0;
          }
        }
      }
    }
  }
  .bg {
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    h1 {
      font-size: 20rem;
      filter: opacity(0.5);
    }
  }

  /* Asegurarse de que la card de hover no muestre los puntos suspensivos */
  .nft:hover .description-container::after {
    display: none;
  }
</style>
