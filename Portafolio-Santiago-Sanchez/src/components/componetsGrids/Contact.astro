---
const { t } = Astro.props as any;
---

<div>
  <h1 class="title">{t?.Contact}</h1>
  <nav class="container-nav">
    <a class="nav" href="">
      <img
        class="image"
        src="/assets/icons/social/Github_dark.svg"
        alt="Github"
      />
    </a>
    <a class="nav" href="">
      <img
        class="image"
        src="/assets/icons/social/linkedin.svg"
        alt="LinkedIn"
      />
    </a>
    <a class="nav" href="">
      <img class="image" src="/assets/icons/social/slack.svg" alt="Slack" />
    </a>
    <a class="nav" href="">
      <img class="image" src="/assets/icons/social/gmail.svg" alt="Gmail" />
    </a>
    <a class="nav" href="">
      <img
        class="image"
        src="/assets/icons/social/facebook.svg"
        alt="Facebook"
      />
    </a>
    <a class="nav" href="">
      <img
        class="image"
        src="/assets/icons/social/Instagram_dark.svg"
        alt="Instagram"
      />
    </a>
    <a class="nav" href="">
      <img class="image" src="/assets/icons/social/discord.svg" alt="Discord" />
    </a>
  </nav>
</div>

<style>
  .title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 2rem;
    color: #333;
  }

  .container-nav {
    display: grid;
    grid-template-columns: repeat(4, 1fr); /* 4 columnas */
    grid-template-rows: repeat(2, auto); /* 2 filas */
    gap: 1rem;
    justify-content: center;
    max-width: 600px;
    margin: 0 auto;
    padding: 1rem;
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0.5rem;
    border-radius: 8px;
    transition:
      transform 0.2s ease,
      box-shadow 0.2s ease;
  }

  .nav:hover {
    transform: translateY(-3px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .image {
    width: 50px;
    height: 50px;
    transition: transform 0.2s ease;
  }

  .nav:hover .image {
    transform: scale(1.1);
  }

  @media (max-width: 600px) {
    .container-nav {
      grid-template-columns: repeat(3, 1fr); /* 3 columnas en móviles */
      gap: 0.5rem;
    }

    .image {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 400px) {
    .container-nav {
      grid-template-columns: repeat(
        2,
        1fr
      ); /* 2 columnas en pantallas pequeñas */
    }
  }
</style>
