<style>
  main {
    margin: auto;
    padding: 1rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
  }

  .contenedor {
    -webkit-backdrop-filter: blur(50px); /* Desenfoque en Safari */
    backdrop-filter: blur(60px); /* Desenfoque en navegadores modernos */
    border-radius: 20px;
    /* background-color: rgba(83, 158, 68, 0.3); /* Fondo semitransparente */
    /* border: 2px solid rgb(228, 255, 220); /* Borde visible */
    padding: 20px;
    margin: 20px auto;
    width: 90%;
    max-width: 700px; /* Ancho máximo */
  }

  .profile {
    display: flex; /* Activar Flexbox */
    gap: 20px; /* Espaciado entre imagen y texto */
    align-items: center; /* Centrar verticalmente */
  }

  .profile-image {
    width: 15vw;
    height: 15vw;
    max-width: 120px;
    max-height: 120px;
    border-radius: 50%; /* Imagen circular */
    object-fit: cover; /* Ajusta contenido de la imagen */
  }

  .profile-text {
    flex: 1; /* Ocupa el espacio restante */
  }

  .profile-text h1 {
    margin-bottom: 10px;
    font-size: 2rem;
  }

  .profile-text p {
    font-size: 1rem;
    line-height: 1.6;
  }

  .nav {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-wrap: wrap; /* Ajusta a nuevas líneas en pantallas pequeñas */
    gap: 100px;
  }

  .aicons {
    border-radius: 20px;
    border: 2px solid rgba(255, 255, 255, 0.9);
    backdrop-filter: blur(50px);
    -webkit-backdrop-filter: blur(50px);
    background: rgba(0, 0, 0, 0.3);
    padding: 10px;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .icons {
    width: 30px;
    height: 30px;
    object-fit: contain;
  }

  /* Media Queries */
  @media (max-width: 768px) {
    .profile {
      flex-direction: column; /* Imagen y texto uno debajo del otro */
      text-align: center; /* Centra contenido */
    }

    .profile-image {
      margin-bottom: 10px; /* Espaciado con el texto */
      width: 25vw;
      height: 25vw;
      max-width: 100px;
      max-height: 100px;
    }

    .profile-text h1 {
      font-size: 1.5rem;
    }

    .profile-text p {
      font-size: 0.9rem;
    }
  }

  @media (max-width: 480px) {
    main {
      font-size: 0.9rem;
    }

    .profile-text p {
      font-size: 0.85rem;
    }

    .icons {
      width: 20px;
      height: 20px;
    }
  }

  #Experience {
    display: flex;
    justify-content: center;
    align-items: center;
  }
</style>
